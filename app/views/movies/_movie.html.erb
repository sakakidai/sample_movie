<div id="<%= dom_id movie %>">
  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= movie.content %>
  </p>

  <p>
    <strong>サムネイル：</strong>
    <% if movie.thumbnail.attached? %>
      <%= image_tag movie.thumbnail %>
      <%= image_tag movie.thumbnail.variant(resize_to_limit: [100, 100]) %>
    <% end %>
  </p>

</div>
